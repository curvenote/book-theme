{
  "name": "@curvenote/book-theme",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build": "npm run build:css && remix build",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "start": "npm run build:css && remix dev"
  },
  "dependencies": {
    "@curvenote/components": "^0.3.4",
    "@curvenote/site": "*",
    "@curvenote/site-common": "^0.0.18",
    "@remix-run/node": "^1.7.3",
    "@remix-run/react": "^1.7.3",
    "@remix-run/vercel": "^1.7.3",
    "@vercel/node": "^2.4.4",
    "node-fetch": "^2.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.3",
    "@remix-run/eslint-config": "^1.7.3",
    "@remix-run/serve": "^1.7.3",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "concurrently": "^7.2.2",
    "eslint": "^8.23.1",
    "prettier": "latest",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
